.input-example {
    padding-bottom: constant(safe-area-inset-bottom);
    /* 兼容 iOS < 11.2 */
    padding-bottom: env(safe-area-inset-bottom);
    /* 兼容 iOS >= 11.2 */
}

.t-input {
    margin-bottom: 16rpx;
}

.t-view {
    margin: 0 0rpx;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 6rpx;
}

.t-view-right {
    text-align: right;
    margin: 20rpx;
}

.t-view-button {
    margin: 0 0rpx;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10rpx;
}

.block {
    display: block;
    margin-bottom: 32rpx;
}

.light {
    background-color: #f6f6f6;
    padding: 5rpx;
}

.button-example {
    margin: 0 32rpx;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32rpx;
  }
  
  .button-example:not(:last-child) {
    margin-bottom: 32rpx;
  }